<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee"
         version="3.0">

  <session-config>
    <session-timeout>760</session-timeout>
  </session-config>

  <!-- 以下3项参数与log4j的配置相关 -->
<!--  <listener>
    <listener-class>org.springframework.web.util.Log4jConfigListener</listener-class>
  </listener>

  <context-param>
